<%= form_for @user, url: url_for(controller: 'sessions', action: 'create') do |f| %>
	<div class="form-group">
		<%= f.label :username, "Select your name" %><br><%= f.collection_select :username, @users, :username, :username %>
	</div><br>

	<div class="form-group">
		<%= f.label :password, "Enter your password" %><br><%= f.password_field :password, class: "form-control" %>
	</div><br>

	<div class="actions">
		<%= f.submit "Sign In", {class: "btn btn-primary"} %>
	</div>
<% end %>
